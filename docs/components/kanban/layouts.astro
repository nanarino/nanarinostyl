---
import prefix from "docs/scripts/prefix"
import Section from "./layout-section.astro"

const layout = `${prefix}-layout`
const header = `${prefix}-layout-header`
const aside = `${prefix}-layout-aside`
const content = `${prefix}-layout-content`
const footer = `${prefix}-layout-footer`
const watermark = `${prefix}-watermark`
---

<div id="layouts-kanban">
    <section class:list={[layout, watermark]}>
        <Section tag="header" className={header} />
        <Section tag="main" className={content} />
        <Section tag="footer" className={footer} />
    </section>

    <section class:list={[layout, watermark]}>
        <Section tag="header" className={header} />
        <section class={layout} data-has-aside>
            <Section
                tag="aside"
                className={aside}
                title={`section.${layout}[data-has-aside]>aside.${aside}`}
            />
            <Section tag="main" className={content} />
        </section>
        <Section tag="footer" className={footer} />
    </section>

    <section class:list={[layout, watermark]}>
        <Section tag="header" className={header} />
        <section class={layout} data-has-aside>
            <Section tag="main" className={content} />
            <Section
                tag="aside"
                className={aside}
                title={`section.${layout}[data-has-aside]>aside.${aside}`}
            />
        </section>
        <Section tag="footer" className={footer} />
    </section>

    <section class:list={[layout, watermark]} data-has-aside>
        <Section
            tag="aside"
            className={aside}
            title={`section.${layout}[data-has-aside]>aside.${aside}`}
            dataset={{ ellipsis: "5" }}
        />
        <section class={layout}>
            <Section tag="header" className={header} />
            <Section tag="main" className={content} />
            <Section tag="footer" className={footer} />
        </section>
    </section>
</div>

<style lang="stylus" is:global>
#layouts-kanban
    display grid
    gap 16px
    color rgb(var(--white))
    &>section
        overflow hidden
        border-radius var(--border-radius-sm)
    header
    footer
        padding 0 2em
        background-color rgb(var(--lime-5))
    aside
        padding 0 2em
        background-color rgb(var(--lime-6))
    main
        padding 0 2em
        background-color rgb(var(--lime-7))
</style>
