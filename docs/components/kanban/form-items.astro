---
import T from "../T.astro"
import Radio from "../radio.astro"

const card_type = [
    { label: "银联", value: "UnionPay" },
    { label: "万事达", value: "MasterCard" },
    { label: "美国运通", value: "AmericanExpress" },
]
---

<form id="formitems-kanban" onsubmit="console.log(this.elements);return false">
    <T class="☘-form-item">
        <label>卡号</label>
        <T class="☘-input-wrapper" data-validate>
            <T
                tag="input"
                id="keywords"
                name="keywords"
                type="search"
                class="☘-input"
                placeholder="请输入卡号"
                required
            />
            <T tag="span" class="☘-form-item-message" data-primary="danger"
                >卡号必填</T
            >
        </T>
    </T>
    <T class="☘-form-item">
        <label>类型</label>
        <T class="☘-input-wrapper" data-validate>
            {
                card_type.map(i => (
                    <Radio
                        id={i.value}
                        name="type"
                        title={i.label}
                        value={i.value}
                        required
                    >
                        {i.label}
                    </Radio>
                ))
            }
            <T tag="span" class="☘-form-item-message" data-primary="danger"
                >卡类型必填</T
            >
        </T>
    </T>
    <T tag="input" type="reset" value="重置" class="☘-button" />
    <T tag="input" type="submit" value="查找" class="☘-button" />
</form>
