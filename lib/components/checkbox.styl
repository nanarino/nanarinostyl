.{prefix}-checkbox

    // --indent-checkbox 1.4em
    // --color-checkbox var(--primary-6)
    // --color-checkbox-disabled var(--primary-3)

    min-height 1em
    position relative
    min-height var(--line-height-body)
    display inline-flex
    // text-indent 1.4em // IOS中不支持 遂改用label的padding-left
    // vertical-align middle
    input.{prefix}-input[type=checkbox]
        margin 0
        border 0
        width 16px
        height 16px
        top 0
        bottom 0
        margin auto 0
        position absolute
        z-index 1
        opacity 0
        cursor pointer
        &:disabled
            cursor not-allowed
        /.{prefix}-input-wrapper
            &:has(^[0..1])
                gap 8px
        ~/-label
            padding-left var(--indent-checkbox, 1.4em)
            min-width 2px
            position relative
            display inline-flex
            align-items center
            &[for]
                cursor pointer
            /**
             * 使用 `^[1..1]` 代替 `../` 减少编译后体积以及选择器冗余
             */
            ^[1..1]:focus-visible+&
                outline 2px solid rgb(var(--color-input-wrapper, var(--outline-color-focus)))
                border-radius var(--border-radius-sm)
            ^[1..1]:disabled+&
                color rgb(var(--gray-6))
                &[for]
                    cursor not-allowed
        /**
         * 外框
         */
        ~/-label::before
            content ''
            width 16px
            height 16px
            box-sizing border-box
            border 2px solid rgb(var(--gray-4))
            position absolute
            left 0
            background-color rgb(var(--white))
            border-radius var(--border-radius-sm)
            transition border-color .3s
            ^[1..1]:not(:disabled):hover+&
                border-color rgb(var(--color-checkbox, var(--primary-6)))
            ^[1..1]:checked+&
                border-color rgb(var(--color-checkbox, var(--primary-6)))
                background-color @border-color
            ^[1..1]:checked:disabled+&
                border-color rgb(var(--color-checkbox-disabled, var(--primary-3)))
                background-color @border-color
            ^[1..1]:disabled+&
                background-color rgb(var(--gray-1))
            ^[1..1]:disabled:not(:checked)+&
                background-color rgb(var(--gray-2))
            ~/[data-indeterminate] &
                padding 2px
                background-color rgb(var(--color-checkbox, var(--primary-6)))
                background-clip content-box
            ~/[data-indeterminate] ^[-2..-2]:disabled+&
                background-color rgb(var(--color-checkbox-disabled, var(--primary-3)))
        /**
         * 内框
         */
        ~/-label::after
            content ''
            text-align center
            line-height 16px
            box-sizing border-box
            position absolute
            left 3px
            width 10px
            height 10px

            ^[1..1]:checked+&

                ~/:where(:not([data-marker])) &
                    height 6px
                    margin-top -1px
                    transform rotate(-45deg)
                    clip-path path("M 0 1.5 \\
                        A 1.5 1.5 0 1 1 3 1 \\
                        L 3 3 \\
                        L 9 3 \\
                        A 1.5 1.5 0 1 1 8.5 6 \\
                        L 1.5 6 \\
                        A 1.5 1.5 0 0 1 0 4.5 \\
                        Z")
                    background-color rgb(var(--white))
                    
                ~/:where([data-marker="-"]) &
                    background rgb(var(--white))
                    height 2px
                    border-radius 2px
