dialog(z = 0)
    if z
        z-index z
    border 0
    box-shadow var(--box-shadow-drop-bottom)
    --box-shadow-color var(--gray-6)
    background-color rgb(var(--white))

    form[method=dialog]
        display grid
        gap var(--padding-popover, 8px)


.{prefix}-popover
    dialog()
    border-radius var(--border-radius-md)
    padding var(--padding-popover, 8px)
    inset unset
    // 用户代理
    //     position fixed
    &.sm
        --padding-popover: 4px

.{prefix}-dialog
    dialog(100)
    border-radius var(--border-radius-lg)
    padding var(--padding-dialog, 16px 24px)
    // 用户代理
    //     .show() -> position absolute
    //     .showModal() -> position fixed
    
    &[open]::backdrop
        // cursor not-allowed
        pointer-events none
        backdrop-filter brightness(.8) blur(1px)
        /:root[data-theme=dark] &
            backdrop-filter brightness(1.25) blur(1px)
