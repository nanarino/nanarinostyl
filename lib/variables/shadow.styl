/**
 * 希望不被继承 所以用通配符
 */
*
    --box-shadow-color var(--gray-4)
    
    /**
     * 边框
     */
    --box-shadow-divider-left inset 1px 0 0 0 rgb(var(--box-shadow-color) \/ 25%)
    --box-shadow-divider-top inset 0 1px 0 0 rgb(var(--box-shadow-color) \/ 25%)
    --box-shadow-divider-right inset -1px 0 0 0 rgb(var(--box-shadow-color) \/ 25%)
    --box-shadow-divider-bottom inset 0 -1px 0 0 rgb(var(--box-shadow-color) \/ 25%)

    /**
     * 外阴影
     */
    --box-shadow-drop-top 0 -6px 12px 4px rgb(var(--box-shadow-color) \/ .3), 0 -3px 28px 0 rgb(var(--box-shadow-color) \/ .5), 0 -1px 2px -1px rgb(var(--box-shadow-color) \/ .7)
    --box-shadow-drop-left -6px 0 12px 4px rgb(var(--box-shadow-color) \/ .3), -3px 0 6px 0 rgb(var(--box-shadow-color) \/ .5), -1px 0 2px -1px rgb(var(--box-shadow-color) \/ .7)
    --box-shadow-drop-right 6px 0 12px 4px rgb(var(--box-shadow-color) \/ .3), 3px 0 6px 0 rgb(var(--box-shadow-color) \/ .5), 1px 0 2px -1px rgb(var(--box-shadow-color) \/ .7)
    --box-shadow-drop-bottom 0 6px 12px 4px rgb(var(--box-shadow-color) \/ .3), 0 3px 6px 0 rgb(var(--box-shadow-color) \/ .5), 0 1px 2px -1px rgb(var(--box-shadow-color) \/ .7)
