@import './../variable/prefix.styl'
@import './../variable/functions.styl'

.{prefix}-pre
    /**
     * 行内的code样式 另见 ./tag&kbd.styl
     */
    overflow-x auto
    background-color _rgb(var(--primary-10))
    ::selection
        background-color _rgb(var(--primary-1))
        color _rgb(var(--primary-9))
    /:root[data-theme=dark] &
        background-color _rgb(var(--gray-2))
        ::selection
            background-color _rgb(var(--primary-9))
            color _rgb(var(--primary-1))
    padding calc(var(--font-offset-parent) + .5em) 1em
    margin 1rem 0
    border-radius var(--border-radius-md)
    .{prefix}-code
        font-size var(--font-size-1)
        line-height var(--font-size-3)
        background-color unset
        padding unset
        border unset
        color unset
